# ===========================
# Diet App Environment Variables
# ===========================
# Copy this to .env and fill in real values
# NEVER commit .env to git
# ===========================

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# MongoDB (if used)
MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/dbname

# Authentication (Clerk)
CLERK_PUBLISHABLE_KEY=pk_test_your_key_here
CLERK_SECRET_KEY=sk_test_your_key_here

# AI Services
OPENAI_API_KEY=sk-your_openai_key_here
ANTHROPIC_API_KEY=sk-ant-your_key_here
GEMINI_API_KEY=your_gemini_key_here

# Food Recognition / Nutrition APIs
NUTRITIONIX_APP_ID=your_app_id_here
NUTRITIONIX_API_KEY=your_api_key_here
FOODVISOR_API_KEY=your_foodvisor_key_here

# Analytics (if used)
MIXPANEL_TOKEN=your_mixpanel_token_here
AMPLITUDE_API_KEY=your_amplitude_key_here

# Push Notifications
APNS_KEY_ID=your_key_id_here
APNS_TEAM_ID=your_team_id_here

# Vercel (auto-populated in Vercel, but listed for reference)
VERCEL_URL=your_vercel_url_here

# App Environment
NODE_ENV=development
APP_ENV=development
